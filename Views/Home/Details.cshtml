@model TeamViewModel
@{
    ViewData["Title"] = "Olympic Team Details";
}
<h2>Team Details</h2>
<div class="row">
    <div class="col-sm-6 col-sm-offset-3">
        <ul class="list-group text-center" style="justify-content:center; text-align:center;">
            <li class="list-group-item">
                <img src="~/lib/images/@Model.Team.LogoImage" alt="" />
                <h3>@Model.Team.Name</h3>
            </li>
            <li class="list-group-item">
                <h4>Game: @Model.Team.Game.Name</h4>
            </li>
            <li class="list-group-item">
                <h4>Sport/Type: @Model.Team.Sport.Name</h4>
            </li>
            <li>
                <a asp-action="Index"
                asp-route-game="@Model.ActiveGame"
                asp-route-sport="@Model.ActiveSport">
                Return to Home Page</a>
            </li>
        </ul>
    </div>
</div>
